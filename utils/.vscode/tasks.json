{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc compiler le fichier actif",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O3",
                "-fopenmp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "${file}",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}